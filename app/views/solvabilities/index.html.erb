<p id="notice"><%= notice %></p>

<h1>Listing Solvabilities</h1>

<table>
  <thead>
    <tr>
      <th>Src</th>
      <th>Dst</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solvabilities.each do |solvability| %>
      <tr>
      	 <td><%= @events.where(id: solvability.src_id)[0].title %></td>
     	 <td><%= @events.where(id: solvability.dst_id)[0].title %></td>
        <td><%= link_to 'Show', solvability %></td>
        <td><%= link_to 'Edit', edit_solvability_path(solvability) %></td>
        <td><%= link_to 'Destroy', solvability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

