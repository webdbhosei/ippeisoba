<p id="notice"><%= notice %></p>

<h1>Listing Causalities</h1>

<table>
  <thead>
    <tr>
      <th>Src</th>
      <th>Dst</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @causalities.each do |causality| %>
      <tr>
        <td><%= @events.where(id: causality.src_id)[0].title %></td>
        <td><%= @events.where(id: causality.dst_id)[0].title %></td>
        <td><%= link_to 'Show', causality %></td>
        <td><%= link_to 'Edit', edit_causality_path(causality) %></td>
        <td><%= link_to 'Destroy', causality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

