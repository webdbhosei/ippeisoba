<h1>Listing Candidate Problems</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @events = Event.all %>

  <% @events.each do |event| %>
  <tbody>
    <% event.solutions.each do |problem| %>
      <tr>
        <td><%= problem.title %></td>
        <td><%= link_to 'Show', problem %></td>
        <td><%= link_to 'Edit', edit_problem_path(problem) %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
  
</table>

<br>

<%= link_to 'New Problem', new_problem_path %>
<%= link_to 'Back', problems_path %>