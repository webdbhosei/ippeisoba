<p id="notice"><%= notice %></p>

<h1>Listing Causes</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Cause</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @causes.each do |cause| %>
      <tr>
        <td><%= cause.event_id %></td>
        <td><%= cause.cause_id %></td>
        <td><%= cause.content %></td>
        <td><%= link_to 'Show', cause %></td>
        <td><%= link_to 'Edit', edit_cause_path(cause) %></td>
        <td><%= link_to 'Destroy', cause, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

